<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matchCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/cbackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Competition and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/competition_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Premier League"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/match_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/status_backgrounds"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/montserrat_black"
                    android:paddingVertical="6dp"
                    android:textAllCaps="true"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/favorite_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Teams and Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Home Team -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minWidth="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/home_team_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/mbackground"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_gallery" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/home_team_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arsenal"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="12dp"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:ellipsize="end"
                    android:minWidth="0dp"
                    tools:ignore="NestedWeights" />

            </LinearLayout>



            <!-- Score -->
            <TextView
                android:id="@+id/match_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_black"
                android:layout_marginHorizontal="16dp" />

            <!-- Away Team -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:minWidth="0dp">

                <TextView
                    android:id="@+id/away_team_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chelsea"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:minWidth="0dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/away_team_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/mbackground"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_gallery" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>